log4j.rootCategory=WARN,A1
log4j.appender.A1.layout=org.apache.log4j.PatternLayout
log4j.appender.A1.layout.ConversionPattern=%d{ISO8601} %-5p [%c{1}] - %m%n

# write to stdout:
log4j.appender.A1=org.apache.log4j.ConsoleAppender

# or write to a file:
#log4j.appender.A1=org.apache.log4j.FileAppender
#log4j.appender.A1.File=run.log

# options can also be specified as -Ds:
#  -Dorg.cougaar.util.log.<LINE>
# e.g.:
#  -Dorg.cougaar.util.log.log4j.appender.A1.File=foo.log

# optionally enable logging categories, e.g.:
#log4j.category.org.cougaar.core=INFO
#log4j.category.org.getalp.blexisma=DEBUG
#log4j.category.org.getalp.blexisma.servlet=DEBUG
log4j.category.org.getalp.blexisma.plugins.semanticlearning=DEBUG
log4j.category.org.getalp.blexisma.plugins.syntax=DEBUG
log4j.category.org.getalp.blexisma.external.plugins.sygfran=DEBUG
#log4j.category.org.getalp.blexisma.external.plugins.stanford=DEBUG
