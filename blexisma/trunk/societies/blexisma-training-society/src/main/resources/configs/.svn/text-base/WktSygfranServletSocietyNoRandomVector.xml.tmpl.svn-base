<?xml version="1.0" encoding="UTF-8"?>
<society>
<host name="localhost">
  <node name="BlexismaMain">
	
	<!-- Agent "NameServer" will be our society-wide naming service -->
    <agent name="NameServer">
      <component class='org.cougaar.core.wp.server.Server'/>
    </agent>
	
    <agent name="SimpleBlexisma">
      	<component class="org.getalp.blexisma.servlet.CVServlet">
              <argument name="path" value="/blexisma"/>
      	</component>
      	
      	<component class="org.getalp.blexisma.servlet.FinalResultManager">
      		<argument name="dimension" value="1904"/>
      		<argument name="codeLength" value="32768"/>
      		<argument name="languageList" value="fr"/>
      	</component>
     	 
		<component class="org.getalp.blexisma.plugins.semdictionary.WiktionaryBasedSemanticDictionaryWithNoRandomPlugin">
			<!-- The complete path to the base save file -->
			<argument name="basePath" value="@@blexisma.vectorbase.path@@"/>
			<!-- The complete path to the network save files -->
			<argument name="netPath" value="@@blexisma.network.path@@"/>
			<argument name="nailedDefPath" value="@@blexisma.naileddefs.path@@"/>
			<argument name="saveCount" value="@@blexisma.training.save.frequency@@"/>
			<argument name="languageList" value="fr"/>
			<argument name="dimension" value="1904"/>
      		<argument name="codeLength" value="32768"/>
		</component>
	
		<component class="org.getalp.blexisma.plugins.semanalysis.SemanticAnalysisPlugin">
			<argument name="analyserClass" value="org.getalp.blexisma.semanalysis.ContextualizingSemanticAnalysis"/>
		</component>
		
		<component class="org.getalp.blexisma.external.plugins.sygfran.SygfranPlugin">
			<!-- The complete path to the SYGFRAN application -->
			<argument name="sygpath" value="@@sygfran.path@@"/>
			<!-- The complete path to the SYGFRAN rules files -->
			<argument name="rulepath" value="@@sygfran.data.path@@"/>
			<!-- The complete path to the SYGFRAN execution directory (faster with a RAM disk) -->
			<argument name="execpath" value="@@syngfran.execdir@@"/>
		</component>
		
		<component class="org.getalp.blexisma.plugins.syntax.SyntaxAnalysisExpander">
     	</component>
	</agent>
  </node>
  
</host>
</society>
