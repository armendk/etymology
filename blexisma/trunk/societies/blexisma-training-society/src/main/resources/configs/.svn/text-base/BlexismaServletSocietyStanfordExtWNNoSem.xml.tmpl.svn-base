<?xml version="1.0" encoding="UTF-8"?>
<society>
<host name="localhost">
  <node name="BlexismaServlet">
	
	<!-- Agent "NameServer" will be our society-wide naming service -->
    <agent name="NameServer">
      <component class='org.cougaar.core.wp.server.Server'/>
    </agent>
	
    <agent name="SimpleBlexisma">
      	<component class="org.getalp.blexisma.servlet.CVServlet">
              <argument name="path" value="/blexisma"/>
      	</component>
      
      	<component class="org.getalp.blexisma.servlet.FinalResultManager">
      		<argument name="dimension" value="2000"/>
      		<argument name="codeLength" value="32768"/>
      		<argument name="languageList" value="en"/>
      	</component>
		   	 
		<component class="org.getalp.blexisma.plugins.semdictionary.XWNDataHandlerPlugin">
			<!-- The complete path to the base save file -->
			<argument name="basePath" value="@@blexisma.vectorbase.path@@"/>
			<!-- The complete path to the network save files -->
			<argument name="netPath" value="@@blexisma.network.path@@"/>
			<argument name="saveCount" value="@@blexisma.training.save.frequency@@"/>
			<argument name="languageList" value="en"/>
			<argument name="dimension" value="2000"/>
      		<argument name="codeLength" value="32768"/>
		</component>
	
		<component class="org.getalp.blexisma.plugins.semanalysis.SemanticAnalysisPlugin">
		</component>
				
		<component class="org.getalp.blexisma.external.plugins.stanford.StanfordPlugin">
			<argument name="language" value="en"/>
			<argument name="parsPath" value="@@english-grammar-path@@"/>
		</component>

		<component class="org.getalp.blexisma.external.plugins.stanford.StanfordPlugin">
			<argument name="language" value="de"/>
			<argument name="parsPath" value="@@german-grammar-path@@"/>
		</component>
		
		<component class="org.getalp.blexisma.plugins.syntax.SyntaxAnalysisExpander">
     	</component>
	</agent>
  </node>
</host>
</society>
