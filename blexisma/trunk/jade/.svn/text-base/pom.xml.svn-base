<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.getalp.blexisma</groupId>
    <artifactId>blexisma</artifactId>
    <version>1.1-SNAPSHOT</version>
    <relativePath>../pom</relativePath>
  </parent>
  <groupId>org.getalp.blexisma.jade</groupId>
  <artifactId>blexisma-jade-agents</artifactId>
  <name>Blexisma JADE Agents - Parent POM</name>
  <packaging>pom</packaging>
  <version>1.1-SNAPSHOT</version>
  <description>Parent POM for Blexisma JADE Agents</description>
  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-assembly-plugin</artifactId>
          <version>2.2.1</version>
          <dependencies>
            <dependency>
              <groupId>org.getalp.blexisma.tools</groupId>
              <artifactId>blexisma-assembly-descriptors</artifactId>
              <version>1.1-SNAPSHOT</version>
            </dependency>
          </dependencies>
          <executions>
            <execution>
              <id>create-society</id>
              <phase>package</phase>
              <goals>
                <goal>single</goal>
              </goals>
              <configuration>
                <descriptorRefs>
                  <descriptorRef>blexisma-society</descriptorRef>
                </descriptorRefs>
              </configuration>
            </execution>
          </executions>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>
  <modules>
    <module>blexisma-core-agent</module>
  </modules>

</project>
